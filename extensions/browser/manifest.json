{
  "manifest_version": 3,
  "name": "Vikunja Quick Entry Browser Link",
  "version": "1.1.0",
  "description": "Sends the active browser tab URL to the Vikunja Quick Entry companion app for instant task linking.",
  "permissions": ["tabs", "nativeMessaging"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-link@vikunja-quick-entry.app",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
